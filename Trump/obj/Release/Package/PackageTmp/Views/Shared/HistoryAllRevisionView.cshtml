@model Trump.Models.HistoryModel
<table class="table table-striped table-bordered">
    <!--.Format("{0:dd/MMM/yyyy}")<tr><td style="font-weight:bold">ID</td><td>@Model.Couriar.CouriarId</td><td style="font-weight:bold">-->@*Master Item*@<!--</td><td>-->@*@Model.Drawing.MasterItm*@<!--</td></tr>-->
    <tr><td style="font-weight:bold">Id</td><td>@Model.Couriar.CouriarId</td><td style="font-weight:bold"> Date</td><td>@Model.Couriar.C_Date.Value.ToString("dd/MMM/yyyy")</td></tr>
    <tr><td style="font-weight:bold">Region</td><td>@Model.Couriar.Region</td><td style="font-weight:bold">Name of Company</td><td>@Model.Couriar.NameOfCompany</td></tr>
    <tr><td style="font-weight:bold">City</td><td>@Model.Couriar.City</td><td style="font-weight:bold">Documents</td><td>@Model.Couriar.Documents</td></tr>
    <tr><td style="font-weight:bold">Receive Time</td><td>@Model.Couriar.ReceiveTime</td><td style="font-weight:bold">Docket No.</td><td>@Model.Couriar.DocketNo</td></tr>
    <tr><td style="font-weight:bold">Vendor</td><td>@Model.Couriar.CouriarVendor</td><td style="font-weight:bold">Status</td><td>@Model.Couriar.CurrentStatus</td></tr>

    <tr><td style="font-weight:bold">Remark</td><td colspan="4">@Model.Couriar.Remark</td></tr>
    @*<tr><td style="font-weight:bold">Assigned Department</td><td colspan="4">@ViewBag.AssigndDepartment</td></tr>*@

    @*@if (Model.Drawing.Reason != null)
        {
            <tr><td style="font-weight:bold">Reject Reason</td><td colspan="4">@Model.Drawing.Reason</td></tr>
        }*@
</table>

@if (Model.CouriarHistory.Count > 0)
{
    <h3>Action History</h3>
    <table class="table table-striped table-bordered">
        <tr>
            @*<th>Action By</th>*@
            <th>Action</th>
            <th>Action In</th>
            <th>Action Date</th>
            <th>@*User*@Action By</th>
           

        </tr>

        @foreach (var item in Model.CouriarHistory)
        {
    <tr>
        @*<td>
            @item.ActionBy
        </td>*@
        <td>
            @item.Action
        </td>
        <td>
            @item.ActionIn
        </td>
        <td>@Html.ValueFor(modelItem => item.ActionDate, "{0:dd/MMM/yyyy hh:mm tt}")</td>

        <td>@item.UserID</td>
      
    </tr>
        }
    </table>
}
