@model IEnumerable<TrumpCL.MaterialReport>

<style>
    table tr td {
        border: 1px solid black
    }

    table tr th {        
        border: 1px solid black
    }
</style>
<div>
    <div>
        <table class="table table-bordered table-responsive bordered"  id="tableToExport" style="width:100%;" border="0">
            <tr style="font-size:14px;background-color:#ab4242;color:white">
                <th >
                    Challan Num
                </th>
                <th >
                    Requestor
                </th>
                <th >
                    Deptartment
                </th>
                <th >
                    Description
                </th>
                <th >
                    Movement Type
                </th>
                <th >
                    Material Type
                </th>
                <th >
                    Raise Date
                </th>
                <th >
                    Material Location
                </th>
                <th >
                    Out From
                </th>
                <th >
                    HOD Time
                </th>
                <th >
                    Security Time
                </th>
                <th>
                    Status
                </th>
            </tr>
            @if (Model.Count() != 0)
            {
                foreach (var i in Model)
                {
                    <tr style="font-size:12.5px">
                        <td>@i.ChallanNmbr</td>
                        <td>@i.Requestor</td>
                        <td>@i.Dept</td>
                        <td>@i.Description</td>
                        <td>@i.S_Type</td>
                        <td>@i.M_Type</td>
                        <td>@i.RaiseDate.ToString("dd/MMM/yyyy")</td>
                        <td>@i.M_Location</td>
                        <td>@i.OutFrom</td>
                        <td>@i.HODTime</td>
                        <td>@i.SecApproveTime</td>

                        <td>
                            @if (i.M_Status == "OUT TW" || i.M_Status == "IN" || i.M_Status == "OUT")
                            {
                                <span>Open</span>
                            }
                            else
                            {
                                @i.M_Status
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="12">
                        <span>No Data found</span>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
