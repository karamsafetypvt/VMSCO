@model IEnumerable<Trump.Models.sp_HCV_Result>
@helper CustomRenderingOfColumn(Trump.Models.sp_HCV_Result item)
{
    @Html.ActionLink("View", "ScanView", new { scanText = item.GPID })
}
@helper CustomPostionOfItam(Trump.Models.sp_HCV_Result item)
{

}
@{
    ViewBag.Title = "AppToday";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Layout/Content/style.css" rel="stylesheet" />
<div class="content" style="font-size:12px;min-height:100%">
    <div class="content_resize">
        <div class="mainbar">
            <div class="article">
                <div id="accordion">
                    <h4 class="clsAccordion">
                        VISITOR IN
                    </h4>
                </div>
                <br />
                <div id="AppointementTableContainer" class="table table-responsive" style="overflow-x:auto">
                    @using GridMvc.Html
                    @{
                        <div style="width:auto;">
                            @Html.Grid(Model).Columns(columns =>
                       {
                           columns.Add(c => c.GPID).Titled("GP ID").Css("ContentTitle").Filterable(true).Sortable(true);
                           columns.Add(c => c.Visitor).Titled("VISITOR").Css("ContentTitle").Filterable(true).Sortable(true);
                           columns.Add(c => c.V_InDate).Titled("IN TIME").Format("{0:dd/MMM/yyyy HH:mm tt}").Css("ContentTitle").Sortable(true).Filterable(true);
                           columns.Add(c => c.Visitor_Type).Titled("PURPOSE").Css("ContentTitle").Filterable(true).Sortable(true);
                           columns.Add(c => c.Mobile).Titled("MOBILE").Css("ContentTitle").Sortable(true).Filterable(true);
                           columns.Add(c => c.Company).Titled("Company").Css("ContentTitle").Sortable(true).Filterable(true);
                           columns.Add(c => c.Host).Titled("HOST").Css("ContentTitle").Sortable(true).Filterable(true);
                           columns.Add(c => c.DepartmentName).Titled("DEPARTMENT").Css("ContentTitle").Sortable(true).Filterable(true);
                           columns.Add().Titled("Action").Css("ContentTitle")
                                        .Encoded(false)
                                        .Sanitized(false)
                                   .RenderValueAs(o => CustomRenderingOfColumn(o));
                       }).WithPaging(10).Sortable(true)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>