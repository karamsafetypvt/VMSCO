@model Trump.Models.Msgtemplate
@{
    ViewBag.Title = "EditTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content" style="font-size:12px;min-height:100%">
    <div class="content_resize">
        <div class="mainbar">
            <div class="article">
                <div class="main">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="widget stacked">  
                                    <div class="widget-header">
                                        <h3>
                                            Edit Notification
                                        </h3>
                                    </div>
                                    <form action="../Master/Edit_Template" method="post" enctype="multipart/form-data">
                                        <input type="hidden" value="@Model.M_ID" name="M_ID" />
                                        <div class="widget-content">
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <div class="form-group">
                                                        <label for="name" class="col-md-10">
                                                            Notification
                                                        </label>
                                                        <div class="col-md-10">
                                                            <textarea name="formTemplate" rows="5" class="form-control">@Model.Template</textarea>
                                                        </div>
                                                        <div class="col-md-2">
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <hr>

                                            <div class="row">
                                                <div class="container">
                                                    <input class="btn btn-primary btnSave" value="Update" type="submit">                                                          <input class="btn btn-primary" value="Back" type="button" onclick="goBack()">
                                                </div>
                                            </div>
                                        </div>
                                        <span style="color:red;font-weight:bold;font-size:medium">Note * Dear < Visitor Name/ Requestor Name> is already pre-fixed.</span>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clr">
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    function goBack() {
        window.history.back();
    }
</script>