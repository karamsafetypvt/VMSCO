@model IEnumerable<TrumpCL.MaterialReport>

<style>
    table tr td {
        border: 1px solid black
    }

    table tr th {
        border: 1px solid black
    }
</style>
<div>
    <div>
        <table class="table table-bordered table-responsive bordered" style="width:100%;" border="0">
            <tr style="font-size:14px;background-color:#ab4242;color:white">
                <th>
                    PO Number
                </th>
                <th>
                    Supplier Name
                </th>
                <th>
                    Supplier Address
                </th>
                <th>
                    PO Date
                </th>
                <th>
                    GST
                </th>
                <th>
                    Item
                </th>
                <th>
                    UOM
                </th>
                <th>
                    Qty
                </th>
                <th>
                    Rec Qty
                </th>
                <th>
                    Rec Date
                </th>
            </tr>
            @if (Model.Count() != 0)
            {
                foreach (var i in Model)
                {
                    <tr style="font-size:12.5px">
                        <td>@i.ChallanNmbr</td>
                        <td>@i.Requestor</td>
                        <td>@i.Dept</td>
                        <td>@i.RaiseDate.ToString("dd/MMM/yyyy")</td>
                        <td>@i.S_Type</td>
                        <td>@i.M_Type</td>
                        <td>@i.M_Location</td>
                        <td>@i.OutFrom</td>
                        <td>@i.ModeOfTrans</td>
                        <td>@i.SecApproveTime</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10">
                        <span>No Data found</span>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
