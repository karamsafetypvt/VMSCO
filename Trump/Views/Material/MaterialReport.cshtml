            }
        });
        
        $.ajax({
            url: '@Url.Action("PopulateSuppliear", "Material")',
            type: 'Get',
            contenType: 'application/json charset utf-8',
            dataType: 'json',
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    var s = "<option value=" + data[i].VNID + ">" + data[i].PartyName + "</option>";
                    $("#Suppliername").append(s);
                }
            }
        });

    });
    </script>

