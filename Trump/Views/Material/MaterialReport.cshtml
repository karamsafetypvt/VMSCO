    <script>
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("GetSiteData", "Home")',
            type: 'Get',
            contenType: 'application/json charset utf-8',
            dataType: 'json',
            success: function (SaleOrder) {
                for (var i = 0; i < SaleOrder.length; i++) {
                    var s = "<option value='" + SaleOrder[i].C_ID + "'>" + SaleOrder[i].CName + "</option>";
                    $("#divCam").append(s);
                }
            }
        });
        $.ajax({
            url: '@Url.Action("GetSuppliername", "Home")',
            type: 'Get',
            contenType: 'application/json charset utf-8',
            dataType: 'json',
            success: function (SaleOrder) {
                for (var i = 0; i < SaleOrder.length; i++) {
                    var s = "<option value='" + SaleOrder[i].VNID + "'>" + SaleOrder[i].PartyName + "</option>";
                    $("#Suppliername").append(s);
                }
            }
        });
        $("#LoadRecordsMaterial").click(function () {
            debugger
            var visitype = $("#MovementTypeR").val();
            var MaterialType = $("#MaterialType").val();
            var HostName = $("#Host").val();
            var DeptName = $("#DeptName").val();
            var From_rport = $("#From_rport").val();
            var To_rport = $("#To_rport").val();
            var M_Status = $("#M_Status").val();

            $.ajax({
                url: '@Url.Action("P_Material", "Material")',
                type: 'GET',
                contenType: 'application/json charset utf-8',
                data: { Host: HostName, DeptName: DeptName ,visitype: $("#MovementTypeR").val(), MaterialType: MaterialType, From_rport: From_rport, To_rport: To_rport, M_Status: M_Status},
                dataType: 'html',
                success: function (response) {
                    $('#weeklayout').html(response);
                }
            })
        })

       $("#ExportMaterialPDF").click(function () {
            $(this).attr("href", "");
            var visitype = $("#MovementTypeR").val();
            var MaterialType = $("#MaterialType").val();
           var HostName = $("#Host").val();
           var pp = $('#DeptName option:selected').val();
            var DeptName = pp.replace(/&/g, 'andd')

            var From_rport = $("#From_rport").val();
            var To_rport = $("#To_rport").val();
            var M_Status = $("#M_Status").val();
  
           var url = "../Material/Print?material="+HostName+"-"+DeptName+"-"+visitype+"-"+MaterialType+"-"+From_rport+"-"+To_rport+"-"+M_Status
            $("#ExportMaterialPDF").attr("href", url);
        })

        $(".validate").datepicker({
            'autoclose': true,
            'endDate': '-0m'
        });
        var d = new Date();
        var month = d.getMonth();
        var day = d.getDate();
        var output = (day < 10 ? '0' : '') + day + '/' + (month < 10 ? '0' : '') + month + '/' + d.getFullYear();
        $("#From_rport").val(output);

        var td = new Date();
        var tmonth = td.getMonth() + 1;
        var tday = td.getDate();
        var toutput = (tday < 10 ? '0' : '') + tday + '/' + (tmonth < 10 ? '0' : '') + tmonth + '/'  + td.getFullYear();

        $("#To_rport").val(toutput);
        $.ajax({
            url: '@Url.Action("PopulateDept", "Home")',
            type: 'Get',
            contenType: 'application/json charset utf-8',
            dataType: 'json',
            success: function (data) {
                debugger
                for (var i = 0; i < data.length; i++) {
                    var s = "<option value=" + data[i].D_ID + " >" + data[i].DepartmentName + "</option>";
                    $("#DeptName").append(s);
                }
            }
        });

        $("#DeptName").change(function () {
            $("#Host option").remove();
            var d = $(this).val();
            $.ajax({
                url: '@Url.Action("PopulateHostWithDept", "Material")',
                type: 'Get',
                contenType: 'application/json charset utf-8',
                dataType: 'json',
                data: {data:d},
                success: function (data) {
                    debugger
                    $("#Host").append('<option selected="selected" value="Select One">Select One</option>');
                    for (var i = 0; i < data.length; i++) {
                       var  s = "<option value=" + data[i].EMPLOYEE_ID + ">" + data[i].requestor_key +"</option>";
                        $("#Host").append(s);
                    }
            }
            })
        })

    });
    </script>

    <script>
        $(document).ready(function () {
            $("#divCam").change(function () {
                var d = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetVisitorData", "Home")',
                    dataType: 'json',
                    type: 'GET',
                    data: { ID: d },
                    success: function (data) {
                        var s1 = "<option value='All'>All</option>";
                        $("#divVis").append(s1);
                        for (var i = 0; i < data.length; i++) {
                            var s = "<option value='" + data[i].V_ID + "'>" + data[i].V_Name + "</option>";
                            $("#divVis").append(s);
                        }
                    }
                })
            })
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                $("input[name='GridHtml']").val($("#weeklayout").html());
            });
        });
    </script>
