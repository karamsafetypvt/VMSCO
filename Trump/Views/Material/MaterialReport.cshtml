            border-bottom: .3em solid;
            border-left: .3em solid transparent;
        }

        .dropdown-menu.show {
            display: block;
        }

        .dropdown-menu {
            position: absolute;
            top: 100%;
            left: 0;
            z-index: 1000;
            display: none;
            float: left;
